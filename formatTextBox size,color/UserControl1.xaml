<UserControl x:Class="WpfApp1.USerControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200">


    <Border BorderBrush="Chocolate" BorderThickness="10">
        <StackPanel >
            <TextBox x:Name="txt" Margin="10"  BorderBrush="Black" BorderThickness="2">20</TextBox>
            <ComboBox x:Name="CmbColors">
                <ComboBox.ContextMenu>
                    <ContextMenu>
                        <ComboBoxItem>Black</ComboBoxItem>
                        <ComboBoxItem>Red</ComboBoxItem>
                        <ComboBoxItem>Blue</ComboBoxItem>
                    </ContextMenu>
                </ComboBox.ContextMenu>
            </ComboBox>
            <Button Click="Button_Click" Margin="10">Change Font Size and color</Button>
        </StackPanel>
    </Border>

</UserControl>
